<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_signup_2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment_signup_2"
    android:background="@color/white">


    <TextView
        android:id="@+id/sign_up"
        android:layout_width="122dp"
        android:layout_height="0dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="4dp"
        android:gravity="center_horizontal|center_vertical"
        android:lineSpacingExtra="-48sp"
        android:text="Sign up"
        android:textAppearance="@style/sign_up"
        android:textSize="32sp"
        android:textStyle="normal"
        android:textColor="@color/grisText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/create_acco"
        android:layout_width="361dp"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="9dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/create_acco"
        android:textAppearance="@style/create_acco"
        android:textSize="16sp"
        android:textStyle="normal"
        android:textColor="@color/grisText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sign_up" />


    <TextView
        android:id="@+id/by_clicking"
        android:layout_width="279dp"
        android:layout_height="43dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="61dp"
        android:layout_marginEnd="55dp"
        android:layout_marginBottom="16dp"
        android:gravity="center_horizontal|top"
        android:text="@string/by_clicking"
        android:textAppearance="@style/by_clicking"
        android:textSize="14sp"
        android:textStyle="normal"
        android:textColor="@color/grisText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.312"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/rectangle_7"
        android:layout_width="343dp"
        android:layout_height="52dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/rectangle_7"
        android:elevation="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.519"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password" />

    <TextView
        android:id="@+id/password"
        android:layout_width="99dp"
        android:layout_height="23dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="password"
        android:textAppearance="@style/password"
        android:textSize="20sp"
        android:textStyle="normal"
        android:textColor="@color/grisText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextEmailAddress2"
        tools:text="password" />

    <EditText
        android:id="@+id/editTextTextPassword"
        android:layout_width="270dp"
        android:layout_height="51dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="50dp"
        android:ems="10"
        android:hint="your password"
        android:inputType="textPassword"
        android:textColor="#1C1B1B"
        android:textColorHint="@color/black"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/rectangle_7"
        app:layout_constraintHorizontal_bias="0.913"
        app:layout_constraintStart_toStartOf="@+id/rectangle_7"
        app:layout_constraintTop_toBottomOf="@+id/password" />


    <View
        android:id="@+id/ellipse_7"
        android:layout_width="76dp"
        android:layout_height="56dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="24dp"
        android:background="@drawable/ellipse_7"
        android:rotation="-91"
        android:rotationY="-8"
        app:layout_constraintBottom_toBottomOf="@+id/ellipse_8"
        app:layout_constraintStart_toEndOf="@+id/ellipse_8"
        app:layout_constraintTop_toTopOf="@+id/ellipse_8" />

    <View
        android:id="@+id/ellipse_8"
        android:layout_width="76dp"
        android:layout_height="73dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="48dp"
        android:layout_marginBottom="48dp"
        android:background="@drawable/ellipse_8"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintStart_toEndOf="@+id/textView6" />

    <Button
        android:id="@+id/button"
        android:layout_width="345dp"
        android:layout_height="68dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/orange"
        android:text="Register"
        android:theme="@style/sign_in_tex"
        app:layout_constraintBottom_toTopOf="@+id/by_clicking"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.378"
        app:layout_constraintStart_toStartOf="parent" />


    <EditText
        android:id="@+id/editTextTextEmailAddress2"
        android:layout_width="316dp"
        android:layout_height="52dp"
        android:layout_marginTop="4dp"
        android:ems="10"
        android:hint="your Email"
        android:textColorHint="@color/black"
        android:inputType="textEmailAddress"
        android:textSize="14sp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/rectangle_4"
        app:layout_constraintHorizontal_bias="0.703"
        app:layout_constraintStart_toStartOf="@+id/rectangle_4"
        app:layout_constraintTop_toTopOf="@+id/rectangle_4" />

    <TextView
        android:id="@+id/email"
        android:layout_width="52dp"
        android:layout_height="22dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="36dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="Email"
        android:textAppearance="@style/email"
        android:textColor="@color/grisText"
        android:textSize="20sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/create_acco" />

    <View
        android:id="@+id/rectangle_4"
        android:layout_width="343dp"
        android:layout_height="52dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rectangle_4"
        android:elevation="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.557"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="68dp"
        android:text="My picture"
        android:textSize="24sp"
        android:textStyle="normal"
        android:textColor="@color/grisText"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/arrow_left" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="43dp"
        android:layout_height="49dp"
        android:src="@android:drawable/ic_menu_camera"
        app:layout_constraintBottom_toBottomOf="@+id/ellipse_8"
        app:layout_constraintEnd_toEndOf="@+id/ellipse_8"
        app:layout_constraintStart_toStartOf="@+id/ellipse_8"
        app:layout_constraintTop_toTopOf="@+id/ellipse_8" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="46dp"
        android:layout_height="45dp"
        android:src="@android:drawable/ic_menu_gallery"
        app:layout_constraintBottom_toBottomOf="@+id/ellipse_7"
        app:layout_constraintEnd_toEndOf="@+id/ellipse_7"
        app:layout_constraintStart_toStartOf="@+id/ellipse_7"
        app:layout_constraintTop_toTopOf="@+id/ellipse_7" />

</androidx.constraintlayout.widget.ConstraintLayout>