<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment_congrat"
    android:background="@color/white">


    <TextView
        android:id="@+id/Forgot"
        android:layout_width="266dp"
        android:layout_height="38dp"
        android:layout_marginTop="248dp"
        android:gravity="center_horizontal|center_vertical"
        android:lineSpacingExtra="-42sp"
        android:text="Congratulation!"
        android:textAppearance="@style/verification"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/please_ente"
        android:layout_width="360dp"
        android:layout_height="46dp"
        android:layout_marginTop="28dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="Your account is complete, Please \n enjoy using our app"
        android:textColor="#6D6B6B"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.686"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Forgot" />

    <Button
        android:id="@+id/button"
        android:layout_width="345dp"
        android:layout_height="68dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="@color/green"
        android:text="Get Started"
        android:theme="@style/sign_in_tex"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.621"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/please_ente" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="123dp"
        android:layout_height="116dp"
        android:layout_marginBottom="32dp"
        android:src="@drawable/congr"
        app:layout_constraintBottom_toTopOf="@+id/Forgot"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>